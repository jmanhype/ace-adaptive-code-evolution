# Ace application environment variables
# Copy this file to .env and fill in your values

# GitHub API Token with repo scope permissions
# Generate at https://github.com/settings/tokens
GITHUB_TOKEN=your_github_token_here

# Database configuration (defaults should work for development)
DATABASE_URL=postgres://postgres:postgres@localhost/ace_dev

# Optional: Override repository settings
# GITHUB_REPO_OWNER=jmanhype
# GITHUB_REPO_NAME=aidevos

# Optional: GitHub webhook secret for receiving GitHub events
# GITHUB_WEBHOOK_SECRET=your_webhook_secret

# Optional: Set to true to enable autonomous deployments of optimizations
# AUTONOMOUS_DEPLOY=false

# GitHub App Configuration
GITHUB_APP_ID="your-app-id"
GITHUB_APP_INSTALLATION_ID="your-installation-id"
GITHUB_APP_PRIVATE_KEY_PATH="priv/github_app_key.pem"
GITHUB_WEBHOOK_SECRET="your-webhook-secret-here"

# Optionally, set a GitHub token as backup
# GITHUB_TOKEN="your-personal-access-token" 